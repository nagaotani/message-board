<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
        <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
        <br>
    <% end %>
   </div>
</div>
<%= form_for(@message) do |f| %>

<div class="form-horizontal container">
  <div class="form-group">
    <div class="control-panel col-sm-2">名前：</div>
    <div class="col-sm-6"><%= f.text_field :name, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="control-panel col-sm-2">内容：</div>
    <div class="col-sm-10"><%= f.text_area :body, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary center-block" %>
  </div>
</div> 
<% end %>