<%= form_for(@message) do |f| %>
  <%  if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>    
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
           <%= full_message %>
          </li>
        <% end %>       
      </ul>
    </div>
  <% end %>

<div class="form-horizontal container">
  <div class="form-group">
    <div class="control-panel col-sm-2 text-center">名前：</div>
    <div class="col-sm-8"><%= f.text_field :name, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="control-panel col-sm-2 text-center">内容：</div>
    <div class="col-sm-8"><%= f.text_area :body, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary center-block" %>
  </div>
</div> 
<% end %>